# Crypto Trading MVP - Variáveis de Ambiente Docker
# Copie este arquivo para .env e configure suas chaves reais

# Database Configuration
DATABASE_URL=postgresql://trading:trading123@postgres:5432/trading_db
DB_HOST=postgres
DB_PORT=5432
DB_NAME=trading_db
DB_USER=trading
DB_PASSWORD=trading123

# Redis Configuration
REDIS_URL=redis://redis:6379/0
REDIS_HOST=redis
REDIS_PORT=6379

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=false

# Dashboard Configuration
DASHBOARD_HOST=0.0.0.0
DASHBOARD_PORT=8501

# Security
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
ENCRYPTION_KEY=your-encryption-key-32-chars-long
SECRET_KEY=your-secret-key-for-sessions

# Trading Configuration
BYBIT_API_KEY=your-bybit-api-key
BYBIT_SECRET_KEY=your-bybit-secret-key
BYBIT_TESTNET=true
DEFAULT_RISK_PER_TRADE=0.02
MAX_POSITIONS=3
ENABLE_LIVE_TRADING=false

# Logging
LOG_LEVEL=INFO
LOG_FILE=/app/logs/trading.log

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_ADMIN_PASSWORD=admin123

# Development
DEBUG=false
ENVIRONMENT=production
